{{#if this.loading}}
  <h2 style="animation: spin 4s infinite linear; display: inline-block;">Loading</h2>
{{else}}
  {{#each this.games as |game|}}
    <GameTile
      @title={{game.name}}
      @timestamp={{game.first_release_date}}
      @imageUrl={{game.cover.url}}
      @description={{game.summary}}
    />
  {{/each}}

{{/if}}
